<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBg">
    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1 "
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/player2wins"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player1Wins" />

    <TextView
        android:id="@+id/player1Wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@+id/player2wins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

    <TextView
        android:id="@+id/player2wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player1Wins"
        app:layout_constraintTop_toBottomOf="@+id/player2" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"

        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/player2wins"
        tools:context=".MainActivity">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/b1"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:background="@color/buttonBg"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/b2"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:background="@color/buttonBg"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/b3"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:background="@color/buttonBg"
                android:onClick="btnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/b4"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:background="@color/buttonBg"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/b5"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:background="@color/buttonBg"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/b6"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:background="@color/buttonBg"
                android:onClick="btnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/b7"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:background="@color/buttonBg"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/b8"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:background="@color/buttonBg"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/b9"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:background="@color/buttonBg"
                android:onClick="btnClick" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
